@model MediaMeetV2.Models.Friend
@{
    ViewBag.Title = "UserAddFriend";
}

<h2>Add a Friend!</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>They will have to add you as a friend as well for the connection to be official.</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.MemberID, "Friend to add", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MemberID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MemberID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add!" class="btn btn-default" />
            </div>
        </div>

    </div>
}